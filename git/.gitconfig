[include]
	path = ~/.git_identity
[alias]
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	unstage = reset HEAD
	co = checkout
	ci = commit -m
    s = status
    aa = add .
    ca = commit -a -m
	type = cat-file -t
	dump = cat-file -p
	ignore = update-index --assume-unchanged
	unignore = update-index --no-assume-unchanged
	ignored = !git ls-files -v | grep "^[[:lower:]]"
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[core]
    editor = /usr/bin/vim
    excludesfile = ~/.gitexclude
[push]
    default = current
